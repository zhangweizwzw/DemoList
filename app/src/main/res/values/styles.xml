<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlideClose" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Required-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <declare-styleable name="BigBangLayout">
        <attr name="itemSpace" format="dimension"/>
        <attr name="lineSpace" format="dimension"/>
    </declare-styleable>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">14sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/holder</item>
    </style>

    <!-- 超大标题文本的样式 -->
    <style name="text_font_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_c4</item>
        <item name="android:textSize">@dimen/text_font_large</item>
        <!--<item name="android:lineSpacingExtra">6sp</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 大标题文本的样式 -->
    <style name="text_font_big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_c4</item>
        <item name="android:textSize">@dimen/text_font_big</item>
        <!--<item name="android:lineSpacingExtra">6sp</item>-->
    </style>
    <!-- 副标题文本或正文文本的样式 -->
    <style name="text_font_middle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_c5</item>
        <item name="android:textSize">@dimen/text_font_middle</item>
        <!--<item name="android:lineSpacingExtra">8sp</item>-->
    </style>
    <!-- 次文本的样式 -->
    <style name="text_font_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_c6</item>
        <item name="android:textSize">@dimen/text_font_small</item>
        <!--<item name="android:lineSpacingExtra">8sp</item>-->
    </style>
    <!-- 小文本的样式 -->
    <style name="text_font_little">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_c6</item>
        <item name="android:textSize">@dimen/text_font_little</item>
        <!--<item name="android:lineSpacingExtra">6sp</item>-->
    </style>
</resources>
